
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/windowBackground"
    android:foreground="?android:windowContentOverlay"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:src="@drawable/foto1"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/red_stripes_small"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:windowContentOverlay"
        android:elevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="125dp"/>

            <TextView
                android:id="@+id/titelTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_header_height"
                android:background="@drawable/my_header"
                android:textSize="@dimen/text_view_text_header_size"
                android:textColor="@color/textColorPrimary"
                android:text="@string/rooster_uit_title"
                android:paddingTop="@dimen/text_view_padding_top"
                android:paddingBottom="@dimen/text_view_padding_bottom"
                android:paddingStart="@dimen/text_view_padding_left"
                android:paddingEnd="@dimen/text_view_padding_right"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="@dimen/text_view_padding_top"
                android:paddingBottom="@dimen/text_view_padding_bottom"
                android:paddingStart="@dimen/text_view_padding_left"
                android:paddingEnd="@dimen/text_view_padding_right"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right"
                android:text="@string/rooster_uit_details"/>



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>